<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <listener>
        <listener-class>com.walking.tbooking.listener.AddAttributesContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.walking.tbooking.listener.DataBaseMigrationContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.walking.tbooking.listener.InitialAdminSetupListener</listener-class>
    </listener>

    <filter>
        <filter-name>RequestJsonDeserializerFilter</filter-name>
        <filter-class>com.walking.tbooking.filter.RequestJsonDeserializerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ResponseJsonSerilizerFilter</filter-name>
        <filter-class>com.walking.tbooking.filter.ResponseJsonSerializerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.walking.tbooking.filter.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.walking.tbooking.filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserStatusFilter</filter-name>
        <filter-class>com.walking.tbooking.filter.UserStatusFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserStatusFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequestJsonDeserializerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ResponseJsonSerilizerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PassengerServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.PassengerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PassengerManagementServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.PassengerManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AirportServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.AirportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AirportManagementServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.AirportManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.FlightServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightManagementServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.FlightManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.TicketServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketManagementServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.TicketManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlockUserServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.BlockUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnblockUserServlet</servlet-name>
        <servlet-class>com.walking.tbooking.servlet.UnblockUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PassengerServlet</servlet-name>
        <url-pattern>/passenger</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PassengerManagementServlet</servlet-name>
        <url-pattern>/admin/passenger</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AirportServlet</servlet-name>
        <url-pattern>/airport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AirportManagementServlet</servlet-name>
        <url-pattern>/admin/airport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightServlet</servlet-name>
        <url-pattern>/flight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightManagementServlet</servlet-name>
        <url-pattern>/admin/flight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketManagementServlet</servlet-name>
        <url-pattern>/admin/ticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlockUserServlet</servlet-name>
        <url-pattern>/user/block</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnblockUserServlet</servlet-name>
        <url-pattern>/user/unblock</url-pattern>
    </servlet-mapping>
</web-app>